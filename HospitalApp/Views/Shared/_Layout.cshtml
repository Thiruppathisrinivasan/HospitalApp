<body>
   
    
    <nav class="navbar navbar-expand-lg"id="nav-custom">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <img src="~/Content/Images/dashborad logo.png" class="logo" />
@if (@User.Identity.Name == "srini001")
{
            @Html.ActionLink("Patient Mapp", "AdminDashboard", "Admin", new { area = string.Empty }, new { @class = "navbar-brand text-white me-5" })
}
else if (User.Identity.IsAuthenticated)
{

    @Html.ActionLink("Patient Mapp", "Dashboard", "Home", new { area = string.Empty }, new { @class = "navbar-brand text-white me-5" })


}
else
{
    @Html.ActionLink("Patient Mapp", "Login", "Home", new { area = string.Empty }, new { @class = "navbar-brand text-white me-5" })

}
                <form class="form-inline me-auto d-flex">
                <input class="form-control me-4 " type="search" placeholder="Search" aria-label="Search">
                <button class="btn search-button me-4" type="submit">Search</button>
            </form>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
               
            
                  @if (@User.Identity.Name == "srini001")
                  {
                    <li class="nav-item">
                        @Html.ActionLink("profile", string.Empty, string.Empty, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("settings", "SettingsList", "Admin", new { @class = "nav-link" })
                    </li>
