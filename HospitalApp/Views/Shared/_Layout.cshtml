                        @Html.ActionLink("Patient", "PatientList", "Admin", new { @class = "nav-link" })
                    </li>

                  

              }
                  
               
         @if (User.Identity.IsAuthenticated)
         {
                <li><h6 class="navbar-text text-white">@User.Identity.Name</h6></li>
